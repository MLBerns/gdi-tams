%tr
  %td.center
    = link_to icon_link_out, course.url
  %td
    - if @teaching_assistant.is_ta_for?(course)
      %span.right_margin.text_secondary
        = icon_check
    - else
      %span.right_margin.text_primary
        = icon_x
    %b= course.name
    %br
    = course.location
  %td
    = course.pretty_date
    %br
    = course.pretty_time
  %td
    - if @teaching_assistant.is_ta_for?(course)
      = link_to 'Change RSVP to No', { controller: :hours, action: :destroy, id: course.hour_for(@teaching_assistant) }, method: :delete, class: 'badge warning'
    - else
      = link_to 'RSVP Yes', { controller: :hours, action: :create, hour: { num: course.credit_hours, course_id: course.id, teaching_assistant_id: @teaching_assistant.id } }, method: :post, class: 'badge approved'
    %br
    %b Credit hours:
    = course.credit_hours