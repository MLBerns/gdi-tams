.card
  - if course.series
    .ribbon-wrapper
      .ribbon
        Series
  .card-image
  .card-header
    = course.pretty_date
  .card-copy
    - if course.series
      %h6
        %span.badges
          %span.badge= course.series.name
    %h5= course.name
    %br
    %p
      = course.location
    %p= course.pretty_time
  .card-stats
    %ul
      %li
        = course.credit_hours
        %span Credit hours
      %li
        = course.num_tas_needed
        %span TAs required
      %li
        = course.num_tas_still_needed
        %span Still need