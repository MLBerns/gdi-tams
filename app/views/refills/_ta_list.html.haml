%h6 Teaching assistants:

%ul.auto_rows__6
  - tas.each do |ta|
    %li.block= ta.name
    %li.block
      (
      = ta.signed_up_for(course)
      )
    %li.block= link_to icon_link_out + ' Profile', teaching_assistant_path(ta), class: 'badge default right_margin'
    %li.block= link_to icon_link_out + ' Private', sign_ups_path(ta.private_id), class: 'badge default right_margin'
    %li.block
      - if ta.is_ta_for?(course)
        = link_to icon_book + ' Use hours', { controller: :hours, action: :update, id: course.hour_for(ta), hour: { num: -course.credit_hours } }, method: :put, title: "Change TA to student", class: "badge warning right_margin"
      - else
        = link_to icon_history + ' Make TA', { controller: :hours, action: :update, id: course.hour_for(ta), hour: { num: course.credit_hours } }, method: :put, title: "Change student to TA", class: "badge approved right_margin"
    %li.block= link_to icon_delete + ' Remove', { controller: :hours, action: :destroy, id: course.hour_for(ta) }, method: :delete, title: "Remove TA from course (will also remove hours from credit balance)", class: "badge warning side_margin"