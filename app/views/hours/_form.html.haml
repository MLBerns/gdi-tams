= form_for @hour do |f|
  - if @hour.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hour.errors.count, "error")} prohibited this hour from being saved:"
      %ul
        - @hour.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :course_id
    = f.number_field :course_id
  .field
    = f.label :teaching_assistant_id
    = f.number_field :teaching_assistant_id
  .field
    = f.label :num
    = f.number_field :num
  .actions
    = f.submit 'Save'
