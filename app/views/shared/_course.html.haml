%article.single_day
  .pure-g
    .pure-u-2-3
      %h5
        = course.name
        = link_to icon_edit + ' Edit course', edit_course_path(course), class: 'badge default'
      %ul.inline
        %li.first More information:
        %li= link_to 'Meetup', course.url
        %li= link_to 'Description', course_path(course)
      %ul.inline
        %li.first Date:
        %li= course.pretty_date
      %ul.inline
        %li.first Time:
        %li= course.pretty_time
      %ul.inline
        %li.first Location:
        %li= course.location
      %ul.inline
        %li.first TA minimum:
        %li
          = course.num_tas_needed
          - if course.need_tas?
            %span.badge.alert.left_margin
              = course.num_tas_still_needed
              still needed!
          - else
            %span.badge.approved.left_margin= icon_check + ' OK!'
      %ul.inline
        %li.first Credit hours:
        %li= course.credit_hours
    .pure-u-1-3
      %h6 Teaching Assistants
      = render partial: 'admins/ta_list', locals: { course: course }